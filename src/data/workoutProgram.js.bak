// Hafta 2-4 programını dinamik oluştur
const generateWeekProgram = (week, startDay) => {
  const weekPrograms = [];

  for (let dayOffset = 0; dayOffset < 7; dayOffset++) {
    const baseWorkout = workoutProgram[dayOffset];
    if (!baseWorkout) continue;

    // Hareketleri kopyala ve zorluk derecesini artır
    const newExercises = baseWorkout.exercises.map((ex) => {
      const updatedExercise = { ...ex };

      // Zorluk derecesini artır
      if (week === 2 && updatedExercise.difficulty === 'Kolay') {
        updatedExercise.difficulty = 'Kolay';
      } else if (week === 3 && updatedExercise.difficulty === 'Kolay') {
        updatedExercise.difficulty = 'Orta';
      } else if (week >= 4 && updatedExercise.difficulty === 'Kolay') {
        updatedExercise.difficulty = 'Orta';
      }

      // Tekrar sayısı biraz artır (string replace)
      updatedExercise.reps = updatedExercise.reps.replace(/(\d+)/g, (match) => {
        const num = parseInt(match);
        // Her hafta %10 artış
        return Math.ceil(num * (1 + (week - 1) * 0.1));
      });

      return updatedExercise;
    });

    weekPrograms.push({
      ...baseWorkout,
      day: startDay + dayOffset,
      week: week,
      exercises: newExercises,
      targetDuration: Math.ceil(baseWorkout.targetDuration * (1 + (week - 1) * 0.08))
    });
  }

  return weekPrograms;
};

// Tüm 30 günü oluştur
const week2 = generateWeekProgram(2, 8);
const week3 = generateWeekProgram(3, 15);
const week4 = generateWeekProgram(4, 22);

export const fullProgram = [...workoutProgram, ...week2, ...week3, ...week4];

// Export fonksiyonları
export const getWorkoutsByWeek = (week) => {
  return fullProgram.filter(w => w.week === week);
};

export const getWorkoutByDay = (day) => {
  return fullProgram.find(w => w.day === day);
};

export const getAllWorkouts = () => {
  return fullProgram;
};
